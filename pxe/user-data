#cloud-config
# See the autoinstall documentation at:
# https://canonical-subiquity.readthedocs-hosted.com/en/latest/reference/autoinstall-reference.html
autoinstall:
  locale: en_US.UTF-8
  refresh-installer:
    update: true
    channel: latest/edge
  keyboard:
    layout: us
    toggle: null
    variant: ''
  source:
    id: ubuntu-server
    search_drivers: false
  apt:
    disable_components: []
    fallback: offline-install
    geoip: true
    mirror-selection:
      primary:
      - country-mirror
      - arches: &id001
        - amd64
        - i386
        uri: http://archive.ubuntu.com/ubuntu/
      - arches: &id002
        - s390x
        - arm64
        - armhf
        - powerpc
        - ppc64el
        - riscv64
        uri: http://ports.ubuntu.com/ubuntu-ports
    preserve_sources_list: false
    security:
    - arches: *id001
      uri: http://security.ubuntu.com/ubuntu/
    - arches: *id002
      uri: http://ports.ubuntu.com/ubuntu-ports
  storage:
    layout:
      name: lvm
      sizing-policy: all
  identity:
    hostname: tmp_host
    password: [password]
    realname: ubuntu
    username: ubuntu
  ssh:
    install-server: true
    authorized-keys:
      # replace with the contents of the public key(s) as generated by
      # ssh-keygen or similar tools
      - [ssh-ed25519]
    allow-pw: false
  oem:
    install: false
  packages:
    # Install ipython3 and git, and ensure they are marked as manually
    # installed.
    - open-vm-tools
    - cifs-utils
    - nfs-common
  timezone: "Europe/Moscow"
  refresh-installer:
    update: true
    channel: latest/edge
  updates: all
  early-commands:
    - sed -i "s:tmp_host:$(host $(ip -4 addr show | grep 192 | grep -oP '(?<=inet\s)\d+(\.\d+){3}') | awk '/name/ { match($5,"([^.]+)",a)}END{print a[1]} '):g" /autoinstall.yaml
  late-commands:
    - echo 'ubuntu ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/ubuntu
    - sed -ie 's/GRUB_CMDLINE_LINUX=.*/GRUB_CMDLINE_LINUX="net.ifnames=0 ipv6.disable=1 biosdevname=0"/' /target/etc/default/grub
    - curtin in-target --target /target update-grub2
    - apt-get purge 'fwupd*'
  version: 1